
Based on: https://git.yoctoproject.org/cgit.cgi/poky/plain/meta/recipes-support/nspr/nspr/fix-build-on-x86_64.patch 

--- nspr-4.20/nspr/configure.in.orig	2019-01-01 12:52:27.098267600 +0300
+++ nspr-4.20/nspr/configure.in	2019-01-01 12:52:34.241267445 +0300
@@ -1875,28 +1875,24 @@
         PR_MD_ASFILES=os_Linux_ia64.s
         ;;
     x86_64)
-        if test -n "$USE_64"; then
-            PR_MD_ASFILES=os_Linux_x86_64.s
-        elif test -n "$USE_X32"; then
+        if test -n "$USE_X32"; then
+            AC_DEFINE(i386)
             PR_MD_ASFILES=os_Linux_x86_64.s
             CC="$CC -mx32"
             CXX="$CXX -mx32"
         else
-            AC_DEFINE(i386)
-            PR_MD_ASFILES=os_Linux_x86.s
-            CC="$CC -m32"
-            CXX="$CXX -m32"
+            PR_MD_ASFILES=os_Linux_x86_64.s
         fi
         ;;
     ppc|powerpc)
         PR_MD_ASFILES=os_Linux_ppc.s
         ;;
     powerpc64)
-        if test -n "$USE_64"; then
+        if test -n "$USE_N32"; then
+            PR_MD_ASFILES=os_Linux_ppc.s
+        else
             CC="$CC -m64"
             CXX="$CXX -m64"
-        else
-            PR_MD_ASFILES=os_Linux_ppc.s
         fi
         ;;
     esac    
